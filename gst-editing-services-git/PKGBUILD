# Contributor: Lubosz Sarnecki <lubosz@gmail.com>

pkgname=gst-editing-services-git
pkgver=0.11.89.1.6a187e0
pkgrel=1
pkgdesc='GStreamer editing services (Git version)'
arch=('i686' 'x86_64')
license=('LGPL')
url='http://gstreamer.freedesktop.org/modules/gst-editing-services.html'
depends=('gst-plugins-base-git')
conflicts=('gst-editing-services')
makedepends=('git' 'cvs' 'intltool' 'pkgconfig' 'gtk-doc')
provides=('gst-editing-services='$pkgver)
options=('!libtool')
groups=('gstreamer')

source=(
#'git+git://git.collabora.co.uk/git/user/tsaunier/gst-editing-service#branch=master'
'git://anongit.freedesktop.org/gstreamer/gst-editing-services'
#'git://github.com/MathieuDuponchelle/PitiviGes.git'
#'git://github.com/lubosz/gst-editing-services.git'
)

sha256sums=('SKIP')
_gitname='gst-editing-services'

pkgver() {
  cd $_gitname
  #git checkout master
  echo $(grep AC_INIT configure.ac | sed 's/AC_INIT(GStreamer Editing Services, //' | sed 's/,//').$(git log --pretty=format:'%h' -n 1)
}

build() {
  cd $_gitname
    
  #git fetch origin
  #git checkout master
  #git checkout audio_mixing

  ./autogen.sh --prefix=/usr || return 1
  make || return 1
}

package() {
  cd $_gitname
  make DESTDIR="$pkgdir" install || return 1
}
