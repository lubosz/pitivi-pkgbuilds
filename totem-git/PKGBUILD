# Contributor: Lubosz Sarnecki <lubosz@gmail.com>

pkgname=totem-git
pkgver=V_3_5_90.501.gbd0555a
pkgrel=1
pkgdesc="A GNOME integrated movie player based on Gstreamer. (GIT version)"
url="http://projects.gnome.org/totem/"
arch=('i686' 'x86_64')
license=('GPL2')
depends=('desktop-file-utils' 'gst-plugins-base-git' 'gst-plugins-good-git' 'iso-codes' 'libunique' 'libxtst' 'libxxf86vm' 'python2' 'totem-plparser')
makedepends=('git')
conflicts=('totem')
_gitroot="git://git.gnome.org/totem"

source='git+git://git.gnome.org/totem'
sha256sums=('SKIP')

_gitname='totem'

pkgver() {
  cd $_gitname
  git describe --always | sed 's|-|.|g'
}


build() {
  cd $_gitname
  #git checkout V_3_8_2
  sh autogen.sh --prefix=/usr
  make
}

package() {
  cd $_gitname
  make DESTDIR=$pkgdir install
}
